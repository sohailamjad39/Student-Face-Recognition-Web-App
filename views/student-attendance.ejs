<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Attendance</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Custom Styles -->
  <style>
    /* Global Styles */
    body {
      background: #f4f6f9;
      color: #333;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      transition: background-color 0.3s ease, color 0.3s ease;
    }
    
    /* Dark Theme Styles */
    body.dark-mode {
      background-color: #121212;
      color: #e0e0e0;
    }
    body.dark-mode .navbar {
      background-color: #1e1e1e !important;
      border-bottom: 1px solid #333;
    }
    body.dark-mode .navbar-brand,
    body.dark-mode .nav-link {
      color: #e0e0e0 !important;
    }
    body.dark-mode .dashboard-container {
      background-color: #2c2c2c;
      color: #e0e0e0;
    }
    body.dark-mode table {
      background-color: #2c2c2c;
    }
    body.dark-mode th,
    body.dark-mode td {
      color: #e0e0e0;
      border-color: #444;
    }
    body.dark-mode th {
      background-color: #1e1e1e;
    }
    body.dark-mode .form-control {
      background-color: #2c2c2c;
      color: #e0e0e0;
      border-color: #444;
    }
    body.dark-mode .form-control::placeholder {
      color: #888;
    }
    body.dark-mode .btn-outline-primary {
      border-color: #1e88e5;
      color: #1e88e5;
    }
    body.dark-mode .btn-outline-primary:hover {
      background-color: #1e88e5;
      color: #fff;
    }
    body.dark-mode .no-data {
      color: #888;
    }
    body.dark-mode tbody tr:hover {
      background-color: #383838;
    }
    body.dark-mode .status-present {
      background-color: #2d4a2d;
      color: #9ae69a;
    }
    body.dark-mode .status-absent {
      background-color: #4a2d2d;
      color: #ff9a9a;
    }
    body.dark-mode .status-onleave {
      background-color: #4a4a2d;
      color: #ffff9a;
    }
    body.dark-mode .btn-custom {
      background-color: #1e88e5;
      color: #242424 !important;
    }
    body.dark-mode .btn-custom:hover {
      background-color: #1565c0;
    }

    /* Light Theme Styles */
    .navbar {
      background: #ffffff;
      border-bottom: 1px solid #ddd;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    .navbar-brand img {
      width: 40px;
      height: auto;
    }
    .navbar-nav .nav-link {
      color: #333 !important;
      font-weight: bold;
      transition: color 0.3s ease;
    }
    .navbar-nav .nav-link:hover {
      color: #007bff !important;
    }
    .dashboard-container {
      background: #ffffff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      margin: 20px auto;
      max-width: 1200px;
      transition: background-color 0.3s ease;
    }
    h2, h3 {
      color: #007bff;
      font-weight: bold;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      background-color: #ffffff;
      border-radius: 10px;
      overflow: hidden;
      transition: background-color 0.3s ease;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: left;
      color: #333;
    }
    th {
      background-color: #f9fafb;
      color: #007bff;
    }
    .btn-custom {
      background-color: #007bff;
      border: none;
      color: #ffffff !important;
      padding: 12px 20px;
      border-radius: 8px;
      font-size: 1.2em;
      font-weight: bold;
      transition: background-color 0.3s ease;
      width: 100%;
      cursor: pointer;
    }
    .btn-custom:hover {
      background-color: #0056b3;
    }
    .section {
      margin-bottom: 30px;
    }
    .form-inline {
      display: flex;
      gap: 15px;
      margin-bottom: 20px;
    }
    .form-control {
      background-color: #f9fafb;
      border: 1px solid #ddd;
      color: #333;
      border-radius: 8px;
      padding: 10px;
      transition: border-color 0.3s ease;
      font-size: 1rem;
      height: 42px;
      width: 100%;
    }
    .form-control::placeholder {
      color: #aaa;
      opacity: 1;
    }
    .form-control:focus {
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
    }
    .no-data {
      color: #aaa;
      text-align: center;
      font-style: italic;
    }
    .status-badge {
      padding: 5px 10px;
      border-radius: 5px;
      font-size: 0.9em;
      font-weight: bold;
      text-transform: uppercase;
    }
    .status-present {
      background-color: #d4edda;
      color: #155724;
    }
    .status-absent {
      background-color: #f8d7da;
      color: #721c24;
    }
    .status-onleave {
      background-color: #fff3cd;
      color: #856404;
    }
    tbody tr:hover {
      background-color: #f1f3f5;
      transition: background-color 0.3s ease;
    }
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    .animated {
      animation: fadeIn 1s ease-in-out;
    }

    /* Theme Switch */
    .theme-switch {
      position: fixed;
      bottom: 20px;
      right: 20px;
      width: 60px;
      height: 30px;
      background-color: #ccc;
      border-radius: 15px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 0 5px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
      transition: background-color 0.3s ease;
      z-index: 1000;
    }
    .theme-switch.dark-mode {
      background-color: #1e88e5;
    }
    .theme-switch .switch-circle {
      width: 20px;
      height: 20px;
      background-color: white;
      border-radius: 50%;
      transition: transform 0.3s ease;
    }
    .theme-switch.dark-mode .switch-circle {
      transform: translateX(30px);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light">
    <a class="navbar-brand" href="/student/dashboard">
      <img src="/images/student.png" alt="Student Logo">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/student/notification"><i class="fas fa-bell"></i> Notifications</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/student/profile/update"><i class="fas fa-user-circle"></i> Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="confirmLogout()"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Attendance Content -->
  <div class="container dashboard-container animated">
    <h2>Attendance Records</h2>
    <!-- Buttons Section -->
    <div class="row mb-4">
      <div class="col-md-4">
        <button class="btn btn-custom" onclick="location.href='/student/dashboard'">Back to Dashboard</button>
      </div>
    </div>
    <!-- Search and Filter Section -->
    <div class="section">
      <form class="form-inline" action="/student/attendance" method="GET">
        <input
          class="form-control"
          type="search"
          name="search"
          placeholder="Search by Class Name or Status"
          value="<%= filters.search || '' %>"
        />
        <select name="classId" class="form-control dropdown" onchange="this.form.submit()" style="height: 43px;">
          <option value="">Filter by Class</option>
          <% classes.forEach(cls => { %>
            <option value="<%= cls._id %>" <%= filters.classId === cls._id.toString() ? 'selected' : '' %>>
              <%= cls.className %>
            </option>
          <% }); %>
        </select>
      </form>
    </div>
    <!-- Attendance Table -->
    <div class="section">
      <h3><i class="fas fa-calendar-check"></i> Attendance</h3>
      <% if (attendance.length > 0) { %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th>Class Name</th>
                <th>Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% attendance.forEach(record => { %>
                <tr>
                  <td><%= record.class?.className || "N/A" %></td>
                  <td><%= record.date.toDateString() %></td>
                  <td>
                    <% if (record.status === "present") { %>
                      <span class="status-badge status-present">Present</span>
                    <% } else if (record.status === "absent") { %>
                      <span class="status-badge status-absent">Absent</span>
                    <% } else if (record.status === "onLeave") { %>
                      <span class="status-badge status-onleave">On Leave</span>
                    <% } %>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="no-data text-center">
          <i class="fas fa-calendar-times fa-3x" style="color: #aaa;"></i>
          <p>No attendance records found.</p>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Theme Switch Button -->
  <div class="theme-switch" id="themeSwitch">
    <div class="switch-circle"></div>
  </div>

  <!-- Bootstrap JS and dependencies -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script>
    // Theme Toggle Logic
    const themeSwitch = document.getElementById('themeSwitch');
    const body = document.body;

    // Check localStorage for theme preference
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme === 'dark') {
      body.classList.add('dark-mode');
      themeSwitch.classList.add('dark-mode');
    }

    // Toggle theme on button click
    themeSwitch.addEventListener('click', () => {
      body.classList.toggle('dark-mode');
      themeSwitch.classList.toggle('dark-mode');
      localStorage.setItem('theme', body.classList.contains('dark-mode') ? 'dark' : 'light');
    });

    // Confirm logout
    function confirmLogout() {
      if (confirm("Are you sure you want to log out?")) {
        window.location.href = "/student/logout";
      }
    }
  </script>
</body>
</html>