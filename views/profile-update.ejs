<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Profile</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <!-- Font Awesome Icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Custom Styles for Dark Theme -->
  <style>
    body {
      background-color: #121212; /* Dark background */
      color: #ffffff; /* White text */
      margin: 0;
      padding: 0;
    }
    .navbar {
      background-color: #1e1e1e; /* Slightly lighter dark background */
      border-bottom: 1px solid #333;
    }
    .navbar-brand img {
      width: 40px; /* Adjust logo size */
      height: auto;
    }
    .navbar-nav .nav-link {
      color: #ffffff !important; /* White text */
    }
    .navbar-nav .nav-link:hover {
      color: #00bcd4 !important; /* Cyan accent on hover */
    }
    .dashboard-container {
      background-color: #1e1e1e; /* Dark container background */
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Subtle glow effect */
      margin: 20px auto;
      max-width: 600px;
    }
    h2, h3 {
      color: #00bcd4; /* Cyan accent color */
    }
    label {
      color: #aaa; /* Light gray text */
    }
    .form-control {
      background-color: #2c2c2c; /* Dark input background */
      border: 1px solid #444; /* Dark border */
      color: #ffffff; /* White text */
    }
    .form-control:focus {
      background-color: #2c2c2c;
      border-color: #00bcd4; /* Cyan accent on focus */
      box-shadow: none;
    }
    .btn-custom {
      background-color: #00bcd4; /* Cyan accent color */
      border: none;
      color: #121212;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 1.1em; /* Larger font size for buttons */
      transition: background-color 0.3s ease;
      width: 100%; /* Full width for buttons */
    }
    .btn-custom:hover {
      background-color: #0097a7; /* Darker cyan on hover */
    }
    .message-success {
      color: #28a745; /* Green text for success */
      margin-bottom: 15px;
    }
    .message-error {
      color: #dc3545; /* Red text for error */
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="#">
      <img src="/images/NUTECH_logo.png" alt="NUTECH Logo">
    </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link" href="/student/notification"><i class="fas fa-bell"></i> Notifications</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/student/dashboard"><i class="fas fa-home"></i> Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/student/changePass"><i class="fas fa-lock"></i> Change Password</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#" onclick="confirmLogout()"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Profile Update Content -->
  <div class="container dashboard-container">
    <h2>Update Profile</h2>

    <!-- Success/Error Messages -->
    <% if (successMessage) { %>
      <div class="message-success"><%= successMessage %></div>
    <% } %>
    <% if (errorMessage) { %>
      <div class="message-error"><%= errorMessage %></div>
    <% } %>

    <!-- Profile Update Form -->
    <form action="/student/profile/update" method="POST">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input
          type="text"
          class="form-control"
          id="firstName"
          name="firstName"
          value="<%= student.firstName %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input
          type="text"
          class="form-control"
          id="lastName"
          name="lastName"
          value="<%= student.lastName %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="<%= student.email %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="phone">Phone (Optional)</label>
        <input
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          value="<%= student.phone || '' %>"
        />
      </div>
      <div class="form-group">
        <label for="address">Address (Optional)</label>
        <textarea
          class="form-control"
          id="address"
          name="address"
          rows="3"
        ><%= student.address || '' %></textarea>
      </div>
      <button type="submit" class="btn btn-custom">Update Profile</button>
    </form>
  </div>

  <!-- Optional: Include jQuery and Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script>
    // Confirm logout
    function confirmLogout() {
      if (confirm("Are you sure you want to log out?")) {
        window.location.href = "/student/logout";
      }
    }
  </script>
</body>
</html>